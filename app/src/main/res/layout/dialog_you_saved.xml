<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="24dp"
    android:gravity="center"
    android:background="@drawable/dialog_bgs"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.airbnb.lottie.LottieAnimationView
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/yousaved_animation"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <TextView
            android:id="@+id/you_saved_text"
            android:textColor="@color/successColor"
            android:textSize="22sp"
            android:fontFamily="@font/roboto_bold"
            android:text="You Saved $230"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:gravity="center"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginTop="8dp"
            android:text="0% Commision Coupon &#10; (Only Pay Menu Price)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/success_party_animation_"
        android:layout_width="200dp"
        android:layout_height="200dp" />

</RelativeLayout>