<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".auth.home.AuthHomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/header"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/logo_with_moto"
                android:layout_width="250dp"
                android:layout_height="250dp" />

        </LinearLayout>

        <LinearLayout
            android:padding="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/header"
            android:orientation="vertical"
            android:background="@color/primaryColor">

            <TextView
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="We Know you are Hungry! Let's start to explore fod near youy."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:background="@drawable/white_curved_back"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:background="#002035"
                    android:padding="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/white"
                        android:text="+91"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/phoneNo"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/transparent"
                    android:hint="Enter Your Phone Number"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/white_curved_back"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <EditText
                    android:visibility="gone"
                    android:padding="12dp"
                    android:id="@+id/passwordView"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/transparent"
                    android:hint="Password"
                    android:layout_width="match_parent"
                    android:inputType="textPassword"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <TextView
                android:id="@+id/forgetPasswordView"
                android:visibility="gone"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginTop="12dp"
                android:textColor="@color/white"
                android:layout_gravity="end"
                android:text="Forgot password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/continueButton"
                android:background="@drawable/white_curved_back"
                android:paddingVertical="12dp"
                android:paddingHorizontal="24dp"
                android:layout_marginTop="32dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/primaryColor"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="18sp"
                    android:text="Continue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/callHelplineButton"
                android:layout_marginBottom="12dp"
                android:paddingVertical="12dp"
                android:paddingHorizontal="24dp"
                android:background="@drawable/white_curved_back"
                android:layout_marginTop="24dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/primaryColor"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="18sp"
                    android:text="Call Helpline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>