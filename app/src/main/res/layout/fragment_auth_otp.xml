<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    tools:context=".auth.home.AuthHomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/header"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/logo_with_moto"
                android:layout_width="250dp"
                android:layout_height="250dp" />

        </LinearLayout>

        <LinearLayout
            android:padding="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/header"
            android:orientation="vertical"
            android:background="@color/primaryColor">

            <TextView
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="Enter the OTP received on the registered mobile number."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.mukesh.OtpView
                android:id="@+id/otp_view"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                app:OtpItemCount="4"
                app:OtpViewType="rectangle"
                android:itemBackground="@color/white"
                android:textColor="@color/primaryColor" />

            <TextView
                android:id="@+id/resendOtp"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_medium"
                android:layout_gravity="end"
                android:layout_marginTop="12dp"
                android:text="Resend OTP"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/callHelplineButton"
                android:layout_marginBottom="12dp"
                android:paddingVertical="12dp"
                android:paddingHorizontal="24dp"
                android:background="@drawable/white_curved_back"
                android:layout_marginTop="24dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/primaryColor"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="18sp"
                    android:text="Call Helpline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>