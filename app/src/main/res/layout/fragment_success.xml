<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.success.SuccessFragment">

    <TextView
        android:id="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/message"
        android:fontFamily="@font/roboto_medium"
        android:text="We Got Your Order!!"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/message"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_above="@id/success_animation"
        android:fontFamily="@font/roboto_medium"
        android:text="Thanks for choosing Apna MZP"
        android:textColor="@color/secondaryColor"
        android:textSize="22sp" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/success_animation"
        android:layout_centerInParent="true"
        app:lottie_rawRes="@raw/check_mark_animation"
        app:lottie_autoPlay="true"
        android:layout_width="300dp"
        android:layout_height="300dp"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/party_animation"
        android:layout_centerInParent="true"
        app:lottie_rawRes="@raw/success_party_animation_"
        app:lottie_autoPlay="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/success_animation"
        android:fontFamily="@font/roboto_medium"
        android:text="We will contact you soon!!"
        android:textColor="@color/secondaryColor"
        android:textSize="22sp" />

    <Button
        android:id="@+id/go_ot_orders_button"
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white"
        android:text="Go To Orders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
t
</RelativeLayout>