<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ApnaMzp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="defaultPadding">
        <item name="android:padding">24dp</item>
    </style>

    <style name="item_text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="edit_text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="location_text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="search_styles">
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:background">@drawable/search_back</item>
    </style>

    <style name="headings">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="main_text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="second_text">
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="My_Widget.MaterialComponents.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <!-- Chip background color selector -->
        <item name="chipBackgroundColor">@drawable/chip_state</item>
        <!-- Border color -->
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/primaryColor</item>

        <!-- Chip text color selector -->
        <item name="android:textColor">@drawable/chip_state_text</item>
        <!-- Chip close icon color selector -->
        <item name="closeIconTint">@color/primaryColor</item>

    </style>


</resources>